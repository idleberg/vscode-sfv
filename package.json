{
    "name": "sfv",
    "displayName": "Simple File Verification",
    "description": "Language support for SFV files",
    "version": "0.2.0",
    "publisher": "idleberg",
    "license": "MIT OR GPL-2.0",
    "author": {
        "name": "Jan T. Sott",
        "url": "http://github.com/idleberg"
    },
    "main": "./lib/index.js",
    "scripts": {
      "compile": "npm run build",
      "build": "tsup",
      "dev": "npm run start",
      "fix": "eslint --fix ./src",
      "lint:ts": "eslint ./src",
      "lint": "npm-run-all --parallel lint:*",
      "prepare": "husky",
      "start": "npm run build -- --watch",
      "test": "npm run lint",
      "vscode:prepublish": "npm run build"
    },
    "keywords": [
        "sfv",
        "simple file verification"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/idleberg/vscode-sfv"
    },
    "homepage": "https://github.com/idleberg/vscode-sfv#readme",
    "bugs": {
        "url": "https://github.com/idleberg/vscode-sfv/issues"
    },
    "icon": "images/logo.png",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:extension.sfv.create",
        "onLanguage:sfv"
    ],
    "contributes": {
        "languages": [
            {
                "id": "sfv",
                "aliases": [
                    "Simple File Verification",
                    "SFV"
                ],
                "extensions": [
                    "sfv"
                ],
                "configuration": "./config/sfv.json"
            },
            {
                "id": "sfvx",
                "aliases": [
                    "Simple File Verification Extended",
                    "SFVX"
                ],
                "extensions": [
                    "sfvx"
                ],
                "configuration": "./config/sfv.json"
            }
        ],
        "grammars": [
            {
                "language": "sfv",
                "scopeName": "source.sfv",
                "path": "./syntaxes/sfv.tmLanguage"
            },
            {
                "language": "sfvx",
                "scopeName": "source.sfv.extended",
                "path": "./syntaxes/sfvx.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "extension.sfv.create",
                "title": "SFV: Create"
            },
            {
                "command": "extension.sfv.verify",
                "title": "SFV: Verify"
            }
        ]
    },
    "dependencies": {
        "simple-file-verification": "^2.0.3"
    },
    "devDependencies": {
      "@eslint/js": "^8.56.0",
      "@types/node": "^20.11.19",
      "@types/vscode": "^1.52.0",
      "@typescript-eslint/eslint-plugin": "^7.0.1",
      "@typescript-eslint/parser": "^7.0.1",
      "eslint": "9.0.0-beta.0",
      "eslint-plugin-jsonc": "^2.13.0",
      "husky": "^9.0.11",
      "lint-staged": "^15.2.2",
      "npm-run-all2": "^6.1.2",
      "prettier": "^3.2.5",
      "tsup": "^8.0.2",
      "typescript": "^5.3.3",
      "typescript-eslint": "^7.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run test"
        }
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix"
    }
}
