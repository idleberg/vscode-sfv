{
    "name": "sfv",
    "displayName": "Simple File Verification",
    "description": "Language support for SFV files",
    "version": "0.2.0",
    "publisher": "idleberg",
    "license": "MIT OR GPL-2.0",
    "author": {
        "name": "Jan T. Sott",
        "url": "http://github.com/idleberg"
    },
    "main": "./readme.md",
    "scripts": {
        "build": "gulp",
        "lint": "vscode-linter",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run lint",
        "vscode:prepublish": "npm run build"
    },
    "keywords": [
        "sfv",
        "simple file verification"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/idleberg/vscode-sfv"
    },
    "homepage": "https://github.com/idleberg/vscode-sfv#readme",
    "bugs": {
        "url": "https://github.com/idleberg/vscode-sfv/issues"
    },
    "dependencies": {},
    "devDependencies": {
        "gulp": "^4.0.2",
        "gulp-raster": "^0.2.0",
        "gulp-rename": "^2.0.0",
        "husky": "^4.2.5",
        "vscode": "^1.1.37",
        "vscode-linter": "^0.3.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run test"
        }
    },
    "icon": "images/logo.png",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:sfv"
    ],
    "contributes": {
        "languages": [
            {
                "id": "sfv",
                "aliases": [
                    "Simple File Verification",
                    "SFV"
                ],
                "extensions": [
                    "sfv"
                ],
                "configuration": "./config/sfv.json"
            },
            {
                "id": "sfvx",
                "aliases": [
                    "Simple File Verification Extended",
                    "SFVX"
                ],
                "extensions": [
                    "sfvx"
                ],
                "configuration": "./config/sfv.json"
            }
        ],
        "grammars": [
            {
                "language": "sfv",
                "scopeName": "source.sfv",
                "path": "./syntaxes/sfv.tmLanguage"
            },
            {
                "language": "sfvx",
                "scopeName": "source.sfv.extended",
                "path": "./syntaxes/sfvx.tmLanguage"
            }
        ]
    }
}
